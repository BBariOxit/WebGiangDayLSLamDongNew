    :- Xem chi tiet Bai hoc;
    :- Xem danh sach Bai Kiem Tra;
    :- Lam Bai Kiem Tra;
    :- Xem Ket qua;
endif

:Xem Dashboard ca nhan;

if (Muon tiep tuc?) then (Co)
    :Quay lai Bu1;
else (Khong)
